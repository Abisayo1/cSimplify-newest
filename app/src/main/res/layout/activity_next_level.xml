<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/next_level"
    tools:context=".NextLevelActivity">

  <TextView
      android:id="@+id/next_level"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="276dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:gravity="center"
      android:text="Level 2!"
      android:textColor="#FFFFFF"
      android:textSize="60sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.549"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/next_levelBtn"
      android:layout_width="311dp"
      android:layout_height="83dp"
      android:layout_marginTop="100dp"
      android:backgroundTint="#5200FF"
      android:text="Go to Next Level"
      android:textColor="#FFFFFF"
      app:cornerRadius="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/next_level" />

  <Button
      android:id="@+id/check_score"
      android:layout_width="311dp"
      android:layout_height="83dp"
      android:backgroundTint="#000E56"
      android:text="Check Score"
      android:textColor="#5200FF"
      app:cornerRadius="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/next_levelBtn"
      app:layout_constraintVertical_bias="0.119" />
</androidx.constraintlayout.widget.ConstraintLayout>